{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MetaTransitionBank",
  "type": "object",
  "properties": {
    "meta_transitions": {
      "type": "object",
      "patternProperties": {
        "^MT[A-Z0-9]{3}$": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "scope": { "type": "string", "enum": ["socratic"] },
            "transition_type": {
              "type": "string",
              "enum": [
                "angle_to_angle",
                "angle_to_category",
                "category_to_category",
                "confirm_switch",
                "backtrack",
                "closure"
              ]
            },
            "from": {
              "type": "object",
              "properties": {
                "category": { "type": "string" },
                "angle": { "type": "string" }
              },
              "additionalProperties": false
            },
            "to": {
              "type": "object",
              "properties": {
                "category": { "type": "string" },
                "angle": { "type": "string" }
              },
              "additionalProperties": false
            },
            "prompt": { "type": "string", "minLength": 1 },
            "example_context": { "type": "string" },
            "tags": {
              "type": "array",
              "items": { "type": "string" }
            },
            "requires_confirmation": { "type": "boolean", "default": false },
            "priority": { "type": "integer", "minimum": 1, "maximum": 10, "default": 5 },
            "trigger_conditions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "clarity_check",
                      "depth_check",
                      "breadth_check",
                      "angles_explored",
                      "user_request",
                      "coverage_exceeded",
                      "contradiction_detected"
                    ]
                  },
                  "params": { "type": "object" }
                },
                "required": ["type"]
              }
            }
          },
          "required": ["id", "scope", "transition_type", "prompt"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["meta_transitions"]
}